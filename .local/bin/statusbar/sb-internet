# Wifi
if [ "$(cat /sys/class/net/w*/operstate | grep -m 1 up 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print "ðŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
